    except Exception as e:
            print(f"El programa solo acepta numeros favor de verificar el Error: {e}")
def juego():
    palabra=seleccion()
    ocultar = "_" * len(palabra)
    intentos = 0
    acumulador = []
    while intentos < 6:
        letra = input("Ingresa una letra: ")
        if letra in acumulador:
            print("Ya adivinaste esa letra, escribe otra")
        elif letra in palabra:
            acumulador.append(letra)
            for i in range(len(palabra)):
                if palabra[i] == letra:
                    ocultar = ocultar[:i] + letra + ocultar[i+1:]
            print("Acertaste una letra, no te confies: ", ocultar)
            if "_" not in ocultar:
                print("GANASTE, se te ha perdonado la vida")
                break
        else:
            intentos += 1
            acumulador.append(letra)
            if intentos == 1:
                print("Letra incorrecta, te quedan", 6-intentos, "intentos. üòÑ ")
            elif intentos == 2:
                print("Letra incorrecta, te quedan", 6-intentos, "intentos. üòÉ ")
            elif intentos == 3:
                print("Letra incorrecta, te quedan", 6-intentos, "intentos. ü•≤ ")
            elif intentos == 4:
                print("Letra incorrecta, te quedan", 6-intentos, "intentos. üòü ")
            elif intentos == 5:
                print("Letra incorrecta, te quedan", 6-intentos, "intento. üòî ")
            elif intentos == 6:
                print("Se acabo, MORIRAS üíÄüíÄüíÄ")
                print("La palabra era", palabra)
                break
juego()
